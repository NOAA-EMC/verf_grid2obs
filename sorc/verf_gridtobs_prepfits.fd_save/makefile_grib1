SHELL=          /bin/sh
LIBS=           -L/nwprod/lib -lg2_4 -lw3_4 -lbufr_s_64 -lbacio_4
FC=             ncepxlf90
FFLAGS=         -qcheck -qextchk -qfixed 
LDFLAGS=       
SRCS=        adddate.f calcape.f calpbl.f calpw.f  getbak.f getfct.f  getprof_upr.f htindex.f ireadpb.f \
             obscape.f obspbl.f  raddate.f setterp.f ufbxy3.f ufbxy3_goes.f w3fb13.f w3fb14.f w3fi71.f windchill.f prepfits.f
OBJS=        adddate.o calcape.o calpbl.o calpw.o  getbak.o getfct.o getprof_upr.o htindex.o ireadpb.o \
             obscape.o obspbl.o  raddate.o setterp.o ufbxy3.o ufbxy3_goes.o w3fb13.o w3fb14.o w3fi71.o windchill.o prepfits.o
CMD=            verf_gridtobs_prepfits

all:	$(CMD)

$(CMD):	$(OBJS)
	$(FC) $(FFLAGS)$(LDFLAGS) -g  -o $(@) $(OBJS) $(LIBS)
clean:
	-rm -rf *.o *.lst
